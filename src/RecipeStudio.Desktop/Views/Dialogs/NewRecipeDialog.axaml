<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RecipeStudio.Desktop.Views.Dialogs.NewRecipeDialog"
        Width="500"
        Height="250"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Title="Новый рецепт">

  <Border Classes="modal-surface">
    <Grid RowDefinitions="Auto,*">
      <Border Classes="modal-header" PointerPressed="Header_PointerPressed">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Text="Новый рецепт" Classes="modal-title" />
          <Button Grid.Column="1" Classes="window-btn" Click="Close_Click">✕</Button>
        </Grid>
      </Border>

      <Grid Grid.Row="1" Margin="22" RowDefinitions="*,Auto">
        <StackPanel Spacing="14">
          <TextBlock Text="Имя файла" Classes="muted" />

          <TextBox x:Name="RecipeNameBox"
                   Watermark="Например, cleaning_process"
                   Classes="modal-input" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,12,0,0">
          <Button x:Name="CancelButton" Classes="ghost" Width="160" Click="Cancel_Click">Отмена</Button>
          <Button x:Name="CreateButton" Classes="accent" Width="160" Click="Create_Click">Создать</Button>
        </StackPanel>
      </Grid>
    </Grid>
  </Border>
</Window>
