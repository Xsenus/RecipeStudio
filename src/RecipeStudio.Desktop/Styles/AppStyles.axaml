<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Styles.Resources>
    <Color x:Key="C_Background">#090B11</Color>
    <Color x:Key="C_Panel">#121620</Color>
    <Color x:Key="C_Card">#141924</Color>
    <Color x:Key="C_Stroke">#2A3142</Color>
    <Color x:Key="C_StrokeSoft">#222938</Color>
    <Color x:Key="C_TextSoft">#7E879C</Color>
    <Color x:Key="C_Accent">#2E5C93</Color>
    <Color x:Key="C_Accent2">#22C55E</Color>
    <Color x:Key="C_Danger">#EF4444</Color>

    <SolidColorBrush x:Key="B_Background" Color="{StaticResource C_Background}" />
    <SolidColorBrush x:Key="B_Panel" Color="{StaticResource C_Panel}" />
    <SolidColorBrush x:Key="B_Card" Color="{StaticResource C_Card}" />
    <SolidColorBrush x:Key="B_Stroke" Color="{StaticResource C_Stroke}" />
    <SolidColorBrush x:Key="B_StrokeSoft" Color="{StaticResource C_StrokeSoft}" />
    <SolidColorBrush x:Key="B_TextSoft" Color="{StaticResource C_TextSoft}" />
    <SolidColorBrush x:Key="B_Accent" Color="{StaticResource C_Accent}" />
    <SolidColorBrush x:Key="B_Accent2" Color="{StaticResource C_Accent2}" />
    <SolidColorBrush x:Key="B_Danger" Color="{StaticResource C_Danger}" />
  </Styles.Resources>

  <Style Selector="Window">
    <Setter Property="Background" Value="{StaticResource B_Background}" />
    <Setter Property="Foreground" Value="#E6EAF2" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Style Selector="Border.titlebar">
    <Setter Property="Background" Value="#0D121C" />
    <Setter Property="BorderBrush" Value="#2A3142" />
    <Setter Property="BorderThickness" Value="1,1,1,0" />
  </Style>

  <Style Selector="Button.window-btn">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="26" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style Selector="Button.window-btn:pointerover">
    <Setter Property="Background" Value="#22314A" />
  </Style>

  <Style Selector="Button.window-btn:pressed">
    <Setter Property="Background" Value="#18253A" />
  </Style>

  <Style Selector="Button.window-btn.close:pointerover">
    <Setter Property="Background" Value="#A32525" />
  </Style>

  <Style Selector="Button.window-btn.close:pressed">
    <Setter Property="Background" Value="#8B1D1D" />
  </Style>

  <Style Selector="TextBlock.h1">
    <Setter Property="FontSize" Value="24" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <Style Selector="TextBlock.heading-icon">
    <Setter Property="FontSize" Value="34" />
    <Setter Property="Foreground" Value="#3B82F6" />
    <Setter Property="Margin" Value="0,-6,0,0" />
  </Style>

  <Style Selector="TextBlock.dashboard-title">
    <Setter Property="LetterSpacing" Value="1.1" />
  </Style>

  <Style Selector="TextBlock.muted">
    <Setter Property="Foreground" Value="{StaticResource B_TextSoft}" />
  </Style>

  <Style Selector="TextBlock.tiny">
    <Setter Property="FontSize" Value="11" />
  </Style>

  <Style Selector="TextBlock.section-label">
    <Setter Property="FontSize" Value="20" />
    <Setter Property="LetterSpacing" Value="1" />
    <Setter Property="Foreground" Value="#A2AABC" />
  </Style>

  <Style Selector="TextBlock.stat-title">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="LetterSpacing" Value="0.9" />
  </Style>

  <Style Selector="TextBlock.brand">
    <Setter Property="FontSize" Value="13" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="#8BA2D8" />
  </Style>

  <Style Selector="Border.card">
    <Setter Property="Background" Value="{StaticResource B_Card}" />
    <Setter Property="BorderBrush" Value="{StaticResource B_Stroke}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="14" />
  </Style>

  <Style Selector="Border.topbar">
    <Setter Property="Background" Value="{StaticResource B_Panel}" />
    <Setter Property="BorderBrush" Value="{StaticResource B_StrokeSoft}" />
    <Setter Property="BorderThickness" Value="1,0,1,1" />
  </Style>

  <Style Selector="Border.status-pill">
    <Setter Property="Background" Value="#181D2A" />
    <Setter Property="BorderBrush" Value="#2A3245" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="12,8" />
  </Style>

  <Style Selector="Border.stat-card">
    <Setter Property="Background" Value="#171B27" />
    <Setter Property="BorderBrush" Value="#2A3143" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="MinHeight" Value="132" />
  </Style>

  <Style Selector="TextBlock.stat-icon">
    <Setter Property="FontSize" Value="50" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="Opacity" Value="0.45" />
  </Style>

  <Style Selector="Border.recipe-card">
    <Setter Property="Background" Value="#181C27" />
    <Setter Property="BorderBrush" Value="#2B3345" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style Selector="Border.recipe-card:pointerover">
    <Setter Property="Background" Value="#1D2331" />
    <Setter Property="BorderBrush" Value="#36517A" />
  </Style>

  <Style Selector="Border.recipe-card:pressed">
    <Setter Property="Background" Value="#151C2A" />
  </Style>


  <Style Selector="TextBox.value-box">
    <Setter Property="TextAlignment" Value="Center" />
  </Style>
  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Style Selector="Button.accent">
    <Setter Property="Background" Value="{StaticResource B_Accent}" />
    <Setter Property="BorderBrush" Value="{StaticResource B_Accent}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.big">
    <Setter Property="Padding" Value="20,10" />
    <Setter Property="FontSize" Value="16" />
  </Style>

  <Style Selector="Button.good">
    <Setter Property="Background" Value="#172A22" />
    <Setter Property="BorderBrush" Value="{StaticResource B_Accent2}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.danger">
    <Setter Property="Background" Value="#2A1717" />
    <Setter Property="BorderBrush" Value="{StaticResource B_Danger}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.ghost">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{StaticResource B_Stroke}" />
    <Setter Property="Foreground" Value="White" />
  </Style>


  <Style Selector="Button.back-arrow">
    <Setter Property="FontSize" Value="17" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style Selector="Button.nav">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="Foreground" Value="#B4BBCD" />
    <Setter Property="Padding" Value="14,8" />
    <Setter Property="FontSize" Value="13" />
  </Style>

  <Style Selector="Button.nav:pointerover">
    <Setter Property="Background" Value="#1A2335" />
    <Setter Property="Foreground" Value="#E7EBF4" />
  </Style>

  <Style Selector="Button.nav.nav-active">
    <Setter Property="Background" Value="{StaticResource B_Accent}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <Style Selector="Button.icon-btn">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="FontSize" Value="26" />
    <Setter Property="Foreground" Value="#8E98AD" />
    <Setter Property="Padding" Value="12,2" />
  </Style>

  <Style Selector="Button.create-recipe">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="#354056" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="FontSize" Value="52" />
    <Setter Property="Foreground" Value="#75809A" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="FontWeight" Value="Light" />
  </Style>

  <Style Selector="Button.icon.action">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="30" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style Selector="Button.icon.action.edit">
    <Setter Property="Background" Value="#19304E" />
    <Setter Property="BorderBrush" Value="#2E5C93" />
    <Setter Property="Foreground" Value="#D9E6FA" />
  </Style>

  <Style Selector="Button.icon.action.delete">
    <Setter Property="Background" Value="#2A1717" />
    <Setter Property="BorderBrush" Value="#EF4444" />
    <Setter Property="Foreground" Value="#FFDCDC" />
  </Style>

  <Style Selector="DataGrid">
    <Setter Property="Background" Value="#0B1220" />
    <Setter Property="BorderBrush" Value="{StaticResource B_StrokeSoft}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RowBackground" Value="#EEF2F7" />
    <Setter Property="GridLinesVisibility" Value="All" />
    <Setter Property="HorizontalGridLinesBrush" Value="#CBD5E1" />
    <Setter Property="VerticalGridLinesBrush" Value="#CBD5E1" />
    <Setter Property="CanUserSortColumns" Value="True" />
  </Style>

  <Style Selector="DataGridRow">
    <Setter Property="Background" Value="#EEF2F7" />
  </Style>

  <Style Selector="DataGridRow:nth-child(even)">
    <Setter Property="Background" Value="#E9EEF6" />
  </Style>

  <Style Selector="DataGridColumnHeader">
    <Setter Property="Background" Value="#E2E8F0" />
    <Setter Property="Foreground" Value="#0F172A" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="BorderBrush" Value="#CBD5E1" />
    <Setter Property="BorderThickness" Value="0,0,1,1" />
  </Style>

  <Style Selector="DataGridCell">
    <Setter Property="Foreground" Value="#0F172A" />
    <Setter Property="BorderBrush" Value="#CBD5E1" />
    <Setter Property="BorderThickness" Value="0,0,1,1" />
    <Setter Property="Padding" Value="6,2" />
  </Style>


  <Style Selector="Border.modal-surface">
    <Setter Property="Background" Value="#0F1420" />
    <Setter Property="BorderBrush" Value="#2A3142" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
  </Style>

  <Style Selector="Border.modal-header">
    <Setter Property="Background" Value="#111827" />
    <Setter Property="Padding" Value="18,14" />
    <Setter Property="BorderBrush" Value="#1F2738" />
    <Setter Property="BorderThickness" Value="0,0,0,1" />
  </Style>

  <Style Selector="TextBlock.modal-title">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="#EAF0FF" />
  </Style>

  <Style Selector="TextBox.modal-input">
    <Setter Property="Background" Value="#1D2A3D" />
    <Setter Property="Foreground" Value="#EAF0FF" />
    <Setter Property="BorderBrush" Value="#3B82F6" />
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Padding" Value="14,10" />
    <Setter Property="MinHeight" Value="44" />
  </Style>
</Styles>
